{
  "appenders": {
    "access": {
      "type": "dateFile",
      "filename": "log/access.log",
      "pattern": "-yyyy-MM-dd",
      "category": "http"
    },
    "server": {
      "type": "file",
      "filename": "log/server.log",
      "maxLogSize": 10485760,
      "numBackups": 3
    },
    "errorFile": {
      "type": "file",
      "filename": "log/errors.log"
    },
    "errors": {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": "errorFile"
    }
  },
  "categories": {
    "default": {
      "appenders": [
        "server",
        "errors"
      ],
      "level": "DEBUG"
    },
    "http": {
      "appenders": [
        "access"
      ],
      "level": "DEBUG"
    }
  }
}